{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "esnext.asynciterable"],
    "module": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}